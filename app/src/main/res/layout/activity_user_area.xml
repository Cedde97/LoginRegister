<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.somaro.loginregister.gui.UserAreaActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvWelcomeMsg"
        android:layout_width="match_parent"
        android:layout_height="64dp"

        android:text="@string/textview"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_gravity="center_horizontal"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="268dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="149dp"
                android:layout_height="84dp"
                android:background="@android:color/holo_blue_light"
                android:onClick="btnSaveClicked"
                android:text="Take Photo"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnShowSaved"
                android:layout_width="wrap_content"
                android:layout_height="84dp"

                android:background="@android:color/holo_green_dark"
                android:elevation="6dp"
                android:onClick="onImageGalleryClick"
                android:text="Show Photo"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/fileTransferButton"
            android:layout_width="231dp"
            android:layout_height="36dp"
            android:text="FileTransfer" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/routingRequest"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:onClick="startRoutingRequest"
            android:text="NodeTransfer" />
    </LinearLayout>

    <Button
        android:id="@+id/neighbourTransferButton"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:text="SendNeighbour" />

    <LinearLayout
        android:layout_width="235dp"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/startServerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="StartServer" />
    </LinearLayout>

</LinearLayout>